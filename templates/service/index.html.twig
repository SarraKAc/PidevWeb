{% extends 'base.html.twig' %}

{% block title %}Service index{% endblock %}

{% block body %}
    <h1>Service index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdService</th>
                <th>NomService</th>
                <th>TitreService</th>
                <th>Prix</th>
                <th>Tmpservice</th>
                <th>Domaine</th>
                <th>Img</th>
                <th>Prixsolde</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for service in services %}
            <tr>
                <td>{{ service.idService }}</td>
                <td>{{ service.nomService }}</td>
                <td>{{ service.titreService }}</td>
                <td>{{ service.prix }}</td>
                <td>{{ service.tmpservice }}</td>
                <td>{{ service.domaine }}</td>
                <td>{{ service.img }}</td>
                <td>{{ service.prixsolde }}</td>
                <td>
                    <a href="{{ path('app_service_show', {'idService': service.idService}) }}">show</a>
                    <a href="{{ path('app_service_edit', {'idService': service.idService}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_service_new') }}">Create new</a>
{% endblock %}
