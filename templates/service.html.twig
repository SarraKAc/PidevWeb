      <button id="sortPriceAscBtn">Trier par prix croissant</button>

<script>
    document.addServiceListener('DOMContentLoaded', function () {
        const sortPriceAscBtn = document.getElementById('sortPriceAscBtn');
        const serviceContainer = document.querySelector('.services .container .row');

        sortPriceAscBtn.addServiceListener('click', function () {
            const serviceCards = Array.from(document.querySelectorAll('.service-card'));

          serviceCards.sort((cardA, cardB) => {
                const priceA = parseFloat(cardA.querySelector('.card-text:last-child').textContent);
                const priceB = parseFloat(cardB.querySelector('.card-text:last-child').textContent);

                return priceA - priceB; // Tri croissant
            });

          serviceContainer.innerHTML = ''; // Vider les événements existants

          serviceCards.forEach(card => {
            serviceContainer.appendChild(card);
            });
        });
    });
</script>

