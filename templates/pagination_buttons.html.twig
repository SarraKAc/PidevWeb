{# pagination_buttons.html.twig #}

{% if pagination.pageCount > 1 %}
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            {% if pagination.currentPage != 1 %}
                <li class="page-item">
                    <a class="page-link" href="{{ path(route, query|merge({'page': 1})) }}" aria-label="First">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">First</span>
                    </a>
                </li>
            {% endif %}

            {% for page in 1..pagination.pageCount %}
                <li class="page-item{% if page == pagination.currentPage %} active{% endif %}">
                    <a class="page-link" href="{{ path(route, query|merge({'page': page})) }}">{{ page }}</a>
                </li>
            {% endfor %}

            {% if pagination.currentPage != pagination.pageCount %}
                <li class="page-item">
                    <a class="page-link" href="{{ path(route, query|merge({'page': pagination.pageCount})) }}" aria-label="Last">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Last</span>
                    </a>
                </li>
            {% endif %}
        </ul>
    </nav>
{% endif %}
