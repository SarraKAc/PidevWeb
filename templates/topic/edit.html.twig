{% extends 'base.html.twig' %}

{% block title %}New Topic{% endblock %}

{% block body %}


    <div class="page-title aos-init aos-animate" data-aos="fade">
        <div class="heading">
            <div class="container">
                <div class="row d-flex justify-content-center text-center">
                    <div class="col-lg-8">
                        <h1>Topic</h1>
                        <p class="mb-0">Modifier un  topic.</p>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!-- Contact Section -->
    <section id="contact" class="contact section">


        <div class="container" data-aos="fade-up" data-aos-delay="100">

            <div class="row gy-4">

                <div class="">
                    {{ form_start(form,{'attr':{'novalidate':'novalidate','class':'php-email-form','action':'#'}}) }}

                    <div class="row gy-4">
                        <div class="col-md-12">
                            {{ form_widget(form.titre_topic, {'attr': {'class': 'form-control','type':'number','placeholder':'Entrer le titre'}}) }}
                        </div>



                        <div class="col-md-12">
                            {{ form_widget(form.image, {'attr': {'class': 'form-control','type':'number','placeholder':'Entrer le contenue'}}) }}
                        </div>

                        <div class="col-md-12">
                            {{ form_widget(form.contenu, {'attr': {'class': 'form-control','type':'number','placeholder':'Entrer le contenue'}}) }}

                        </div>

                        <div class="col-md-12 text-center">
                            <div class="loading">Loading</div>
                            <div class="error-message"></div>
                            <div class="sent-message">Your message has been sent. Thank you!</div>

                            <button type="submit" >Send Message</button>
                        </div>

                    </div>
                    {{ form_end(form) }}
                </div><!-- End Contact Form -->

            </div>

        </div>

    </section><!-- /Contact Section -->







{% endblock %}
