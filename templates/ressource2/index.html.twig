{% extends 'base.html.twig' %}

{% block title %}Ressource index{% endblock %}

{% block body %}
    <h1>Ressource index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Sumrate</th>
                <th>Datemodif</th>
                <th>Img</th>
                <th>Filepath</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ressource in ressources %}
            <tr>
                <td>{{ ressource.id }}</td>
                <td>{{ ressource.nom }}</td>
                <td>{{ ressource.description }}</td>
                <td>{{ ressource.prix }}</td>
                <td>{{ ressource.sumrate }}</td>
                <td>{{ ressource.datemodif ? ressource.datemodif|date('Y-m-d') : '' }}</td>
                <td>{{ ressource.img }}</td>
                <td>{{ ressource.filepath }}</td>
                <td>
                    <a href="{{ path('app_ressource2_show', {'id': ressource.id}) }}">show</a>
                    <a href="{{ path('app_ressource2_edit', {'id': ressource.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_ressource2_new') }}">Create new</a>
{% endblock %}
